<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTutorial.DataBinding"
             Title="DataBinding"
             xmlns:EmpModel="clr-namespace:MauiTutorial.Models">
    <ContentPage.Resources>
        <EmpModel:Employee x:Key="employee" Name="Chandra" Id="2" Age="40"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label x:Name="EmployeeLbl"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Label 
            Text="{Binding Name,Source={StaticResource employee}}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Button Text="Change Name" Clicked="Button_Clicked"
                VerticalOptions="Center" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>