<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTutorial.InputControls"
             Title="InputControls">
    <StackLayout>
        <CheckBox IsChecked="True" />
        <Slider x:Name="Slider1"
                Minimum="0"
                Maximum="10"
                MinimumTrackColor="Red"
                MaximumTrackColor="Green"
                ThumbColor="Blue"
                ValueChanged="Slider1_ValueChanged"/>
        <Label x:Name="resultSlider1"/>
        <Stepper x:Name="Steper1"
                 ValueChanged="Steper1_ValueChanged"
                 Minimum="1"
                 Maximum="10"
                 Increment="1"/>
        <Switch x:Name="Switch1"
            IsToggled="True"
                Toggled="Switch_HandlerChanged"/>
        <DatePicker/>
        <TimePicker/>
        <Entry x:Name="UserTextName" Placeholder="Enter UsserName"
               PlaceholderColor="Red"
               IsPassword="True"
               Keyboard="Numeric"
               TextChanged="UserTextName_TextChanged"
               Completed="UserTextName_Completed"/>
        <Editor AutoSize="TextChanges" x:Name="UserTextEditor" Completed="UserTextEditor_Completed"/>
    </StackLayout>
</ContentPage>