<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTutorial.StackPageDemo"
             Title="StackPageDemo">
    <!--<StackLayout Spacing="10" Orientation="Horizontal">-->
    <StackLayout Spacing="10" >
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Start" BackgroundColor="Aqua"/>
        <Label 
            Text="Welcome to .NET MAUI Label 2!"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="End" BackgroundColor="Black" />
        <Label 
            Text="Welcome to .NET MAUI Label 3!"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand" BackgroundColor="Blue" />
        <Label 
            Text="Welcome to .NET MAUI Label 4!"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="Center" BackgroundColor="Chartreuse" />
    </StackLayout>
</ContentPage>